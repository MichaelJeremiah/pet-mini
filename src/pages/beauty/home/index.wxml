<vx-navbar title="美容" />

<view class="container">
    <view class="banner-swiper">
      <swiper indicator-dots autoplay circular indicator-color="#ffffff" indicator-active-color="#fccb30">
        <block wx:for="{{banners}}" wx:key="index">
          <swiper-item class="banner-swiper-item">
            <image class="banner-swiper-img" src="{{item.url}}" mode="aspectFill" />
          </swiper-item>
        </block>
      </swiper>
    </view>

    <vx-card title="美容服务">
        <block wx:for="{{goodsList}}" wx:key="index">
            <biz-goods-card
                img="{{item.img}}"
                name="{{item.name}}"
                desc="{{item.desc}}"
                price="{{item.price}}"
                bind:click="onGoodsClick"
            />
        </block>
    </vx-card>
</view>

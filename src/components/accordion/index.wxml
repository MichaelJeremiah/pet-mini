<view class="vx-class {{ ss.wrap }}">
    <view class="{{ ss.hd }}" bindtap="onTap">
        <block wx:if="{{ title }}">
            <view class="{{ ss.title }}">{{ title }}</view>
        </block>
        <block wx:else>
            <slot name="header"></slot>
        </block>
        <view class="{{ ss.arrow }}" wx:if="{{ showArrow }}"></view>
    </view>
    <view class="{{ ss.bd }}">
        <view class="{{ ss.content }}" wx:if="{{ content }}">{{ content }}</view>
        <slot></slot>
    </view>
</view>

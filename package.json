{
  "name": "cefang-mall-helper",
  "version": "1.0.0",
  "description": "基于gulp的微信小程序工作流",
  "scripts": {
    "postinstall": "gulp install",
    "build": "gulp build",
    "clean": "gulp clean",
    "start": "npm run dev",
    "dev": "gulp start",
    "deploy": "node scripts/release.js",
    "lint": "eslint --fix --color --parser-options=ecmaVersion:7 --ext .js,.ts src/",
    "stylelint": "npx stylelint --fix --cache --color \"src/**/*.less\""
  },
  "lint-staged": {
    "src/**/*.{js,ts}": "eslint --fix --color",
    "src/**/*.less": "npx stylelint --cache --color --fix --custom-syntax postcss-less"
  },
  "gitHooks": {
    "pre-commit": "echo '检查css和js代码格式...' && yarn stylelint && yarn lint",
    "commit-msg": "commitlint -e -V"
  },
  "keywords": [
    "gulp",
    "typescript",
    "less",
    "wechat",
    "miniprogram"
  ],
  "author": "yaojh",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.20.2",
    "@babel/preset-env": "^7.15.8",
    "@commitlint/cli": "^13.2.1",
    "@commitlint/config-conventional": "^13.2.0",
    "@types/node": "^16.11.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "babel-eslint": "^10.1.0",
    "colors": "^1.4.0",
    "cross-env": "^7.0.3",
    "del": "^6.0.0",
    "eslint": "^8.0.1",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "execa": "5.1.1",
    "gulp": "^4.0.2",
    "gulp-babel": "^8.0.0",
    "gulp-eslint": "^6.0.0",
    "gulp-less": "^5.0.0",
    "gulp-less-import": "^1.0.0",
    "gulp-plumber": "^1.2.1",
    "gulp-rename": "^2.0.0",
    "gulp-sourcemaps": "^3.0.0",
    "gulp-stylelint": "^13.0.0",
    "gulp-typescript": "^6.0.0-alpha.1",
    "gulp-wechat-weapp-src-alisa": "^1.0.4",
    "inquirer": "^8.2.0",
    "jsonfile": "^6.1.0",
    "lint-staged": "^11.2.3",
    "minimist": "^1.2.5",
    "miniprogram-api-typings": "^3.4.3",
    "ora": "5.4.1",
    "prettier": "^2.4.1",
    "stylelint": "13.13.1",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^22.0.0",
    "ts-node": "^10.3.0",
    "typescript": "^4.4.4",
    "yaml": "^1.10.2",
    "yorkie": "^2.0.0"
  },
  "dependencies": {
    "@antv/wx-f2": "^2.1.1"
  }
}

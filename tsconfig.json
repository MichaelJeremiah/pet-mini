{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "lib",
    "declaration": true,
    "module": "commonjs",
    "target": "es5",
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "lib": ["DOM", "es2015", "es2016", "es2017"],
    "typeRoots": ["./gulp", "./node_modules/@types"]
  },
  "exclude": ["dist", "node_modules"]
}
